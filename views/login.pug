extend layout

block content
    .container
        .row
            .col
                h1 Scrumban
                br
                br
                //- if registeredSuccessfully
                //-     .alert.alert-success
                form(method="POST" action="/login")
                    .form-group
                        label(for='username') User Name
                        input#name.form-control(type='text' aria-describedby='emailHelp' placeholder='Enter User Name' name="username")
                    .form-group
                        label(for='password') Password
                        input#password.form-control(type='password' aria-describedby='emailHelp' placeholder='Enter password' name="password")
                        br
                    button.btn.btn-primary Login
                    br
                    br
                    //- p Login with Google
                    a(href="/auth/google")
                        img(src="/images/google-plus-logo.png" width='50' height='50' alt="google logo")
                    br
                    br
                    br
                    br
                    br
                    p Not A Member? 
                        a(href="/registration") Register