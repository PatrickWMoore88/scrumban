extend account

append base
    br
    br
    div#boards
        .board.text-center(style='width: 18rem;')
    .board-body
        h3.board-title Create New Board
        .row
            .col-md-6.col-md-offset-3
                form(method="POST" action="./account/boards/add")
                    .form-group
                        label(for='board_name') Project Name
                        input#name.form-control(type='text' placeholder='Enter Your Project Name' name="board_name")
                        br
                    button.btn.btn-primary Start Your New Project